<Window x:Class="KinderApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinderApp"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>

        <Border Background="Aquamarine" Height="434" VerticalAlignment="Bottom">

            <StackPanel Orientation="Horizontal">
                <TabControl TabStripPlacement="Top" Background="Aquamarine">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Margin" Value="0,0,0,0"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontSize" Value="14"/>

                        </Style>
                    </TabControl.Resources>

                    <TabItem Header="Сотрудники" Background="LightCoral">
                        <StackPanel Height="400" Margin="0,0,0,0" Background="LightCoral">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Create"/>
                            <Button Content="Update"/>
                            <Button Content="Delete"/>
                            <Button Content="Show"/>
                            <Button Content="Hide"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Воспитанники" Background="PeachPuff">
                        <StackPanel Background="PeachPuff">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>

                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Create"/>
