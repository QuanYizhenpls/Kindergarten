<Window x:Class="KinderApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinderApp"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="1000">
    <Grid>
        
       
        <Border Background="Aquamarine">
            

            <TabControl Background="Transparent" BorderBrush="Transparent" Margin="10,10,0,0">
                
                <TabItem Header="Сотрудники" Margin="-10,0,-10,0" Width="110" Height="30" FontSize="16">

                    <Grid>

                        <Grid Grid.Row="1">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400"/>

                                <ColumnDefinition Width="531*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">

                                <Button Content="Create" Command="{Binding CreateCommand}" Width="70" Height="30" Margin="0,-300,100,0"/>
                                <Button Content="Update" Command="{Binding UpdateCommand}" Width="70" Height="30" Margin="-90,-300,100,0"/>
                                <Button Content="Delete" Command="{Binding DeleteCommand}" Width="70" Height="30" Margin="-90,-300,100,0"/>
                                <Button Content="Show"  Command="{Binding ShowCommand}" Width="70" Height="30" Margin="-90,-300,100,0"/>
                                <Button Content="Hide"  Command="{Binding HideCommand}" Width="70" Height="30" Margin="-90,-300,100,0"/>

                            </StackPanel>
                            
                        </Grid>

                    </Grid>

                </TabItem>

                <TabItem Header="Воспитанники" Margin="10,0,-20,0" Width="120" Height="30" FontSize="16">

                    

                </TabItem>

                <TabItem Header="Группы" Margin="20,0,-40,0" Width="70" Height="30" FontSize="16">


                </TabItem>

                <TabItem Header="Договоры" Margin="30,0,-60,0" Width="90" Height="30" FontSize="16">


                </TabItem>

                <TabItem Header="Данные сотрудников" Margin="40,0,-80,0" Width="170" Height="30" FontSize="16">

                    

                </TabItem>

                <TabItem Header="Зарплата" Margin="50,0,-100,0" Width="80" Height="30" FontSize="16">

                </TabItem>

                <TabItem Header="Планы" Margin="60,0,-120,0" Width="70" Height="30" FontSize="16">

                    

                </TabItem>
            </TabControl>
        </Border>
        
    </Grid>
</Window>
