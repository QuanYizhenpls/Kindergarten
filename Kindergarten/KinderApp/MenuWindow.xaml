                        </StackPanel>
                    </TabItem>
                </TabControl>
                <StackPanel Background="Aquamarine">
                    <Image Source="pack://application:,,,/Icons/Lastochka.jpg" Width="150" Height="200" Margin="0,-30,0,0"/>
                </StackPanel>
                
            </StackPanel>

        </Border>
        
    </Grid>
</Window>
