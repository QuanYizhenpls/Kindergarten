<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--Основные цвета приложения-->

    <LinearGradientBrush x:Key="PrimaryColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#EEF3FB"/>
        <GradientStop Offset="1" Color="#CACFE9"/>
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="AccentColor" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#E99AAC"/>
        <GradientStop Offset="1" Color="#CACFE9"/>
    </LinearGradientBrush>

    <!--Цвета для текста-->
    <SolidColorBrush x:Key="TextActiveColor" Color="#EEF3FB"/>
    <SolidColorBrush x:Key="TextPassiveColor" Color="#C45572"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#CACFE9"/>
    <SolidColorBrush x:Key="AccentBackColor" Color="#E99AAC"/>
</ResourceDictionary>