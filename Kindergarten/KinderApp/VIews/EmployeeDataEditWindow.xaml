<Window x:Class="KinderApp.VIews.EmployeeDataEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinderApp.VIews"
        mc:Ignorable="d"
        Title="EmployeeDataEditWindow" Width="500" Height="400">
    <Grid>
        <StackPanel Background="Aqua" HorizontalAlignment="Center" Width="500" Height="400">

            <Label Content="Паспорт"  HorizontalAlignment="Left"/>

            <TextBox Text="{Binding Pasport, UpdateSourceTrigger=PropertyChanged}" Width="450" HorizontalAlignment="Left"/>

            <Label Content="СНИЛС"  HorizontalAlignment="Left"/>

            <TextBox Text="{Binding SNILS, UpdateSourceTrigger=PropertyChanged}"  Width="200" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" SpellCheck.IsEnabled="True" VerticalContentAlignment="Top" HorizontalAlignment="Left"/>

            <Label Content="ИНН" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding INN, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Label Content="Трудовая книга" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding EmploymentRecord, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>


            <Label Content="Сотрудник" HorizontalAlignment="Left"/>
            <ComboBox ItemsSource="{Binding Employees}" SelectedItem="{Binding SelectedAddEmployee, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left"
        Width="200"
        Margin="5"
        Tag="Groups"
        VerticalContentAlignment="Top"/>

            <Button Content="Сохранить" Command="{Binding SaveCommand}"
      Width="140" Margin="0,20,0,10" HorizontalAlignment="Left"/>
            <Button Content="Закрыть" Width="50"       x:Name="CloseButton"
Click="CloseButton_Click"
       HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
