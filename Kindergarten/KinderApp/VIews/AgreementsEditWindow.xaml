<Page x:Class="KinderApp.VIews.AgreementsEditWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinderApp.VIews"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="500"
      Title="AgreementsEditWindow">

    <Grid>
        <StackPanel Background="Aqua" HorizontalAlignment="Center" Width="500" Height="400">

            <Label Content="Отпуск"  HorizontalAlignment="Left"/>

            <TextBox Text="{Binding Vacation, UpdateSourceTrigger=PropertyChanged}" Width="450" HorizontalAlignment="Left"/>

            <Label Content="Больничный"  HorizontalAlignment="Left"/>

            <TextBox Text="{Binding SickLeave, UpdateSourceTrigger=PropertyChanged}"  Width="200" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" SpellCheck.IsEnabled="True" VerticalContentAlignment="Top" HorizontalAlignment="Left"/>

            <Label Content="Договор об увольнении" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding Dismissal, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Label Content="Трудовой договор" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding EmploymentContract, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>


            <Label Content="Сотрудник" HorizontalAlignment="Left"/>
            <ComboBox ItemsSource="{Binding Employee, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left"
SelectedItem="{Binding SelectedEmployee}"
        Width="200"
        Margin="5"
        Tag="Groups"
        VerticalContentAlignment="Top"/>

            <Button Content="Сохранить" Command="{Binding SaveCommand}"
      Width="140" Margin="0,20,0,10" HorizontalAlignment="Left"/>
            <Button Content="Закрыть" Width="50" 
      x:Name="CloseButton"
       HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Page>
