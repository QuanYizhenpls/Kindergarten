<Page x:Class="KinderApp.VIews.EmployeeEditWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KinderApp.VIews"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      Title="EmployeeEditWindow">

    <Grid>
        <StackPanel Background="Aqua" HorizontalAlignment="Center" Width="500" Height="400">

            <Label Content="ФИО"  HorizontalAlignment="Left"/>

            <TextBox Text="{Binding FIO, UpdateSourceTrigger=PropertyChanged}" Width="450" HorizontalAlignment="Left"/>

            <Label Content="Образование"  HorizontalAlignment="Left"/>

            <TextBox Text="{Binding Education, UpdateSourceTrigger=PropertyChanged}"  Width="200" TextWrapping="Wrap" AcceptsReturn="True" AcceptsTab="True" SpellCheck.IsEnabled="True" VerticalContentAlignment="Top" HorizontalAlignment="Left"/>

            <Label Content="Опыт работы" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding Expirience, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>

            <Label Content="Должность" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding Post, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Width="200" TextWrapping="Wrap" AcceptsReturn="True"/>


            <Label Content="Группа" HorizontalAlignment="Left"/>
            <ComboBox ItemsSource="{Binding Group, UpdateSourceTrigger=PropertyChanged}"  HorizontalAlignment="Left"
  SelectedItem="{Binding SelectedGroup}"
          Width="200"
          Margin="5"
          Tag="Groups"
          VerticalContentAlignment="Top"/>

            <Button Content="Сохранить" Command="{Binding SaveCommand}"
        Width="140" Margin="0,20,0,10" HorizontalAlignment="Left"/>
            <Button Content="Закрыть" Width="50" 
        x:Name="CloseButton" HorizontalAlignment="Left"/>
        </StackPanel>

    </Grid>
</Page>
