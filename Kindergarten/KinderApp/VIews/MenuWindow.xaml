<Window x:Class="KinderApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinderApp"
        mc:Ignorable="d"
        Title="MenuWindow" Height="450" Width="800">
    <Grid>

        <Border Background="Beige" Height="434" VerticalAlignment="Bottom" Margin="0,0,0,-20">

            <StackPanel Orientation="Horizontal">
                
                <TabControl TabStripPlacement="Top" Background="Beige">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Margin" Value="0,0,0,0"/>
                            <Setter Property="Padding" Value="10,5"/>
                            <Setter Property="FontSize" Value="14"/>

                        </Style>
                    </TabControl.Resources>



                    <TabItem Header="Воспитанники" Background="LightCoral">
                        <StackPanel Background="LightCoral" Width="795">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding KAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding KUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding KRemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Kindergartners}" SelectedItem="{Binding SelectedAddKindergartner, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Группы" Background="PeachPuff">
                        <StackPanel Background="PeachPuff" Width="795" >
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding GAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding GUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding GRemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Groups}" SelectedItem="{Binding SelectedAddGroup, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Сотрудники" Background="LightGoldenrodYellow">
                        <StackPanel Height="400" Background="LightGoldenrodYellow" HorizontalAlignment="Left" Width="795">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding EAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding EUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding ERemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Employee}" SelectedItem="{Binding SelectedAddEmployee, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>
                    <TabItem Header="Договоры" Background="LightGreen">
                        <StackPanel Background="LightGreen" Width="795">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding AAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding AUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding ARemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Agreements}" SelectedItem="{Binding SelectedAddAgreement, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Данные сотрудников" Background="SkyBlue">
                        <StackPanel Background="SkyBlue" Width="795">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding EDAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding EDUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding EDRemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding EmployeeDatas}" SelectedItem="{Binding SelectedAddEmployeeData, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Зарплата" Background="Violet">
                        <StackPanel Background="Violet" Width="795">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding SAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding SUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding SRemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Salaries}" SelectedItem="{Binding SelectedAddSalary, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </TabItem>

                    <TabItem Header="Планы" Background="WhiteSmoke">
                        <StackPanel Background="WhiteSmoke" Width="795" Height="400" HorizontalAlignment="Left">
                            <StackPanel.Resources>
                                <Style TargetType="Button">
                                    <Setter Property="Margin" Value="5"/>
                                    <Setter Property="Padding" Value="10,5"/>
                                    <Setter Property="Width" Value="100"/>
                                    <Setter Property="HorizontalAlignment" Value="Left"/>
                                    <Setter Property="Background" Value="AliceBlue"/>
                                    <Setter Property="Foreground" Value="DarkSalmon"/>
                                </Style>
                            </StackPanel.Resources>
                            <Button Content="Добавить" Command="{Binding PAddCommand}"/>
                            <Button Content="Обновить" Command="{Binding PUpdateCommand}"/>
                            <Button Content="Удалить" Command="{Binding PRemoveCommand}"/>
                            <ListView HorizontalAlignment ="Right" Height="375" Width="670" VerticalAlignment="Top" Margin="0,-110,10,0" ItemsSource="{Binding Plans}" SelectedItem="{Binding SelectedAddPlan, UpdateSourceTrigger=PropertyChanged}"/>

                        </StackPanel>
                    </TabItem>
                </TabControl>


            </StackPanel>

        </Border>

    </Grid>
</Window>
